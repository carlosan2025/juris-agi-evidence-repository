# Evidence Repository Configuration
# Copy this file to .env and fill in the values

# =============================================================================
# Application Settings
# =============================================================================
APP_NAME=Evidence Repository
APP_VERSION=0.1.0
DEBUG=true
LOG_LEVEL=INFO

# =============================================================================
# API Settings
# =============================================================================
API_V1_PREFIX=/api/v1
API_HOST=0.0.0.0
API_PORT=8000

# =============================================================================
# Authentication
# =============================================================================
# Placeholder API keys (comma-separated for multiple keys)
API_KEYS=dev-key-12345,test-key-67890

# JWT Settings (for future upgrade)
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# =============================================================================
# Database Settings
# =============================================================================
DATABASE_URL=postgresql+asyncpg://evidence:evidence_secret@localhost:5432/evidence_repository
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# =============================================================================
# Storage Settings
# =============================================================================
# Storage backend: "local" or "s3"
STORAGE_BACKEND=local

# Local storage settings
LOCAL_STORAGE_PATH=./data/uploads

# S3 storage settings (for future use)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
S3_BUCKET_NAME=evidence-repository
S3_ENDPOINT_URL=  # For S3-compatible services like MinIO

# =============================================================================
# LovePDF Settings (PDF text extraction)
# =============================================================================
LOVEPDF_PUBLIC_KEY=your-lovepdf-public-key
LOVEPDF_SECRET_KEY=your-lovepdf-secret-key

# =============================================================================
# OpenAI Settings (Embeddings)
# =============================================================================
OPENAI_API_KEY=your-openai-api-key
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
OPENAI_EMBEDDING_DIMENSIONS=1536

# =============================================================================
# Embedding Chunking Settings
# =============================================================================
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# =============================================================================
# Redis Settings (Job Queue)
# =============================================================================
REDIS_URL=redis://localhost:6379/0
REDIS_QUEUE_NAME=evidence_jobs
REDIS_JOB_TIMEOUT=3600
REDIS_RESULT_TTL=86400

# =============================================================================
# Bulk Ingestion Settings
# =============================================================================
BULK_INGESTION_BATCH_SIZE=50
URL_DOWNLOAD_TIMEOUT=300
MAX_FILE_SIZE_MB=100

# Supported file extensions (comma-separated)
SUPPORTED_EXTENSIONS=.pdf,.txt,.md,.csv,.xlsx,.png,.jpg,.jpeg,.webp

# =============================================================================
# CORS Settings
# =============================================================================
CORS_ORIGINS=["http://localhost:3000","http://localhost:8080"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["*"]
CORS_ALLOW_HEADERS=["*"]
